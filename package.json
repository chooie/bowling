{
  "name": "bowling",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/main.js",
    "test": "mocha --reporter dot \"src/_*_test.js\"",
    "watch": "mocha --reporter min --watch \"src/_*_test.js\"",
    "pretty": "prettier --write \"src/**/*.js\""
  },
  "husky": {
